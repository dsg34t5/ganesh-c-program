#include <iostream>
using namespace std;
int main()
{
{
    int positive=0, negative=0, zero=0, i, arr[5];
    cout<<"Enter 5 Numbers: ";
    for(i=0; i<5; i++)
        cin>>arr[i];
    for(i=0; i<5; i++)
    {
        if(arr[i]>0)
            positive++;
        else if(arr[i]==0)
            zero++;
        else
            negative++;
    }
    cout<<"\nFrequency of Positive Numbers: "<<positive;
    cout<<"\nFrequency of Zero: "<<zero;
    cout<<"\nFrequency of Negative Numbers: "<<negative;
    cout<<endl;
}
{
	int num1, num2, num3, num4, num5;
	int positive, negative;
	cout << "Please enter the numbers: " << endl;
	cin >> num1;
	cin >> num2;
	cin >> num3;
	cin >> num4;
	cin >> num5; 
	if (num1 > 0)
	{
		num1 = positive;
	}
	else
	{
		num1 = negative;
	}
	if (num2 > 0)
	{
		num2 = positive;
	}
	else
	{
		num2 = negative;
	}
	if (num3 > 0)
	{
		num3 = positive;
	}
	else
	{
		num3 = negative;
	}
	if (num4 > 0)
	{
		num4 = positive;
	}
	else
	{
		num4 = negative;
	}
	if (num5 > 0)
	{
		num5 = positive;
	}
	else
	{
		num5 = negative;
	}
	int sum;
	sum = (num1 + num2 + num3 + num4 + num5);
	int average;
	average = (num1 + num2 + num3 + num4 + num5) / (5);
	cout << "The sum of all five numbers is " << sum << "." << endl;
	cout << "The average of all five numbers is " << average << "." << endl;
	cout << "The avergae of the " "positive numbers is " <<positive<< endl;
	cout << "The average of the " "negative numbers is " <<negative<< endl;
	return 0;
}
}
